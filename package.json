{
  "name": "new_home_page",
  "version": "1.0.0",
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "server": "parcel serve -p 3000 --no-hmr ./src/html/index.pug",
    "build": "NODE_ENV=production parcel build src/html/index.pug",
    "start": "concurrently \"npm run watch\" \"npx parcel serve src/html/index.pug\"",
    "watch": "parcel watch src/html/index.pug",
    "lint": "stylelint src/style/*.scss",
    "lh": "lighthousebot",
    "cy": "cypress open",
    "cy:run": "cypress run",
    "cy:verify": "cypress verify",
    "serve": "serve -l 3000 ./dist"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/register": "^7.6.0",
    "autoprefixer": "9.6.1",
    "browserslist": "4.7.0",
    "concurrently": "^4.1.2",
    "css-mqpacker": "^7.0.0",
    "cypress": "3.4.1",
    "lighthousebot": "git+https://github.com/GoogleChromeLabs/lighthousebot.git",
    "parcel-bundler": "1.12.3",
    "parcel-plugin-purifycss": "^1.0.5",
    "parcel-plugin-static-files-copy": "^2.2.1",
    "postcss-flexbugs-fixes": "^4.1.0",
    "pug": "^2.0.4",
    "sass": "^1.22.12",
    "serve": "11.1.0",
    "stylelint": "^11.0.0",
    "stylelint-config-standard": "^19.0.0"
  },
  "dependencies": {
    "normalize.css": "8.0.1",
    "typeface-karla": "0.0.72"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "font-family-no-missing-generic-family-keyword": null
    }
  },
  "engines": {
    "yarn": "YARN NO LONGER USED - use npm instead."
  }
}
